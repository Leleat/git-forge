{
  "name": "git-forge",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build && chmod +x dist/git-forge",
    "format": "prettier --write src tests",
    "format:check": "prettier src tests",
    "lint": "eslint src tests",
    "test": "vitest --exclude tests/contract",
    "test:once": "vitest run --exclude tests/contract",
    "test:contracts": "vitest run tests/contract"
  },
  "keywords": [
    "git",
    "cli"
  ],
  "author": "leleat",
  "license": "MIT",
  "description": "A CLI for basic interactions with issues and pull requests across popular git forges",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "msw": "^2.12.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.13"
  }
}
