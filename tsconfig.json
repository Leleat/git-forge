{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": ".",
    "erasableSyntaxOnly": true,
    "outDir": "dist",
    "module": "es2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
    }
  }
}
